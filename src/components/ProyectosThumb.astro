---
interface Props {
  title: string;
  url?: string;
  image: string;
}

const { title, url = "/", image } = Astro.props;
---

<a href={url}>
  <div class="flex flex-col items-center">
    <div
      class="fade-in-bottom bg-cover bg-center 2xl:w-[35rem] 2xl:h-[18rem] md:w-[20rem] md:h-[11rem] 2xl:rounded-[40px] md:rounded-2xl shadow-black/25 drop-shadow-xl"
      style={{ backgroundImage: `url('${image}')` }}
    >
    </div>
    <h2 class="w-full mt-5 text-4xl text-center underline text-neutral-700">
      {title}
    </h2>
    <p class="w-full mt-4 text-xl text-center text-neutral-500">
      <slot />
    </p>
  </div>
</a>
