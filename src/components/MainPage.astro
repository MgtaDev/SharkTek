---
import C2AnimationScripts from "../components/AnimationScripts.astro";
import C2Footer from "../components/Footer.astro";
import C2Navbar from "../components/Navbar.astro";

import "../css/main.scss";
import "@splidejs/splide/css";
import LanguagueSwitch from "./LanguagueSwitch.astro";

const { currentLocale } = Astro.props
console.log(currentLocale)
---

<html lang={currentLocale} class="light">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon"  href="S-ICON.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SharkTek</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Smooch+Sans:wght@500;700;800;900&display=swap"
    />
    <!-- <link
      rel="stylesheet"
      type="text/css"
      href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"
    /> -->
  </head>
  <body class="bg-white overflow-x-clip">
    <div id="root">
      <C2Navbar />
      <div id="content" class="w-screen overflow-x-clip overflow-y-auto">
        <slot />
        <div class=`fixed bottom-6 left-6 bg-gray-100 opacity-3 w-[3.5rem] h-[3.4rem] bg-opacity-80 backdrop-blur-[0.5rem] border-2 border-opacity-40 shadow-2xl rounded-full flex items-center justify-center hover:scale-[1.15] active:scale-105 transition-all`> 
          <LanguagueSwitch/>
        </div>
        
          <div class="fixed cursor-pointer bottom-6 right-6 bg-gray-100 opacity-3 w-[3.5rem] h-[3.4rem] bg-opacity-80 backdrop-blur-[0.5rem] border-2 border-opacity-40 shadow-2xl rounded-full flex items-center justify-center hover:scale-[1.15] active:scale-105 transition-all">
          <img id="ws-btn"  class="w-[35px] hover:transform" src='/social.png' alt="social"/>
          </div> 
        
          

       
      </div>
      <C2Footer />
    </div>
    <script>
      window.addEventListener("DOMContentLoaded", () => {
        const wsBtn = document.getElementById("ws-btn");
        wsBtn.addEventListener("click", () => {
          window.open("https://wa.me/17865832029?text=Hola!%20quisiera%20realizar%20una%20cotizacion%20para%20mi%20pagina%20web%20con%20SharkTek", "_blank");
        })})

    </script>

    <!-- Scripts -->
    <!-- <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"
    ></script>
    <script
      type="text/javascript"
      src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script
      type="text/javascript"
      is:inline
      src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"
    ></script> -->
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/@floating-ui/core@1.5.3"></script>
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/@floating-ui/dom@1.5.4"></script>
    <C2AnimationScripts />
  </body>
</html>
