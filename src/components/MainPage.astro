const { currentLocale } = Astro.props
console.log(currentLocale)

const sendWhatsappMessage = () => {
  window.open("https://wa.me/17865832029", "_blank")
};
---

<html lang={currentLocale} class="light">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon"  href="S-ICON.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SharkTek</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Smooch+Sans:wght@500;700;800;900&display=swap"
    />
    <!-- <link
      rel="stylesheet"
      type="text/css"
      href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"
    /> -->
  </head>
  <body class="bg-white overflow-x-clip">
    <div id="root">
      <C2Navbar />
      <div id="content" class="w-screen overflow-x-clip overflow-y-auto">
        <slot />
        <div class=`fixed bottom-6 left-6 bg-gray-100 opacity-3 w-[3.5rem] h-[3.4rem] bg-opacity-80 backdrop-blur-[0.5rem] border-2 border-opacity-40 shadow-2xl rounded-full flex items-center justify-center hover:scale-[1.15] active:scale-105 transition-all`> 
          <LanguagueSwitch/>
        </div>
        {
          location.pathname !== "/dashboard2" 
          ? 
          <div class="flex fixed bottom-0 w-20 right-0 m-2 p-4 rounded-full cursor-pointer">
          <img onClick={()=> sendWhatsappMessage()} className="w-20 hover:transform hover:scale-110" src={WhatsappIcon} alt=""/>
          </div> 
          : ''
       }
      </div>
      <C2Footer />
    </div>

    <!-- Scripts -->
